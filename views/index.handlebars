<div class="container">
  <div class="row">
    <div class="col-md-12 text-center" id="top">
      <h1>EAT DA ETTORES BURGER!</h1>
    </div>
    <div class="col s6 text-center" id= "task">
        <div class="row">
          {{#each burgers_data}}
            {{#unless this.devoured}}
          <div class="col-md-9 text-center">
            <div class='burgerAvailable'> {{this.burger_name}}</div>
          </div>
        <div class="col-md-3 text-center">
          <form method="POST" action="/burgers/{{this.id}}?_method=PUT" class="button-size">
            <button type="submit" class="btn btn-default">DEVOUR</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
        </div>
    </div>

    <div class="col s6 text-center" class="task">
        {{#each burgers_data}}
          {{#if this.devoured}}
            <input class="form-control" type="text" value="{{this.id}}. {{this.burger_name}}" readonly>
          {{/if}}
        {{/each}}  
    </div>
  </div>    
</div>

<div class="container">
  <div class="row">
      <div class="col-md-12 text-center enter_section">
      <form action="/burgers" method="POST">
        
        <input type="text" name="burger_name" class="form-control" value= " " id="enter_text">
        <button type="submit" class="btn waves-effect waves-light" id="addBurgerButton">SUBMIT</button>
      </form>
      <h2>Add DA Burger!</h2>
      </div>
  </div>
</div>  

